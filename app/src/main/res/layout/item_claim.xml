<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/cv_item_claim">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10ssp">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/id_txt_judul_claim"
                android:text="Perjalanan Surabaya"
                android:fontFamily="@font/latoregular"
                android:textColor="#000000"
                android:textSize="@dimen/_11ssp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

            <TextView
                android:layout_marginTop="@dimen/_3ssp"
                android:layout_marginBottom="@dimen/_3ssp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/id_txt_tanggal"
                android:fontFamily="@font/latoregular"
                android:text="2020-06-0"
                android:textColor="#505050"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/id_txt_total"
                android:text="Rp. 250.000"
                android:textColor="#505050"
                android:textSize="@dimen/_10ssp"/>

        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_statusalertt"
            android:layout_width="@dimen/_20ssp"
            android:layout_height="@dimen/_20ssp"
            android:src="@drawable/status_red"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/linearLayout5"
            app:layout_constraintTop_toTopOf="@+id/linearLayout5"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>